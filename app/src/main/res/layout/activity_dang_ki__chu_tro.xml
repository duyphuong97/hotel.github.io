<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Account">


    <TextView
        android:id="@+id/textViewDangNhap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="77dp"
        android:layout_marginEnd="77dp"
        android:text="ĐĂNG KÍ CHỦ TRỌ"
        android:textAlignment="center"
        android:textColor="#0E4D8B"
        android:textSize="25dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageViewDangNhap"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_below="@+id/textViewDangNhap"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="165dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="165dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDangNhap"
        app:srcCompat="@drawable/icontimkiem" />


    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewDangNhap"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="55dp"
        android:ems="10"
        android:background="@drawable/edit"
        android:textColorHint="#1976D2"
        android:textColor="#1976D2"
        android:drawablePadding="10dp"
        android:padding="20dp"
        android:hint="Nhập Email"
        android:inputType="textPersonName"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewDangNhap" />

    <EditText
        android:id="@+id/editTextMatKhau"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextEmail"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="55dp"
        android:ems="10"
        android:background="@drawable/edit"
        android:textColorHint="#1976D2"
        android:textColor="#1976D2"
        android:drawablePadding="10dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:hint="Nhập Paasword"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmail" />


    <Button
        android:id="@+id/buttonDangKi"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@+id/editTextMatKhau"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="107dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="107dp"
        android:background="#1976D2"
        android:text="Đăng Kí"
        android:textColor="#F9FAFB"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/editTextMatKhau" />


</RelativeLayout>