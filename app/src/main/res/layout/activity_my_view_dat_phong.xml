<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView_KH"
        xmlns:android="http://schemas.android.com/apk/res/android"
        app:cardElevation="8dp">

        <RelativeLayout
            android:id="@+id/Home_DatPhong"
            android:layout_width="match_parent"
            android:layout_height="250dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:id="@+id/ImageKH"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:id="@+id/Layout_ThongTinKH"
                android:layout_alignParentBottom="true"
                android:background="#D9000000">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ten_KhachHang"
                    android:text="Nguyễn Nguyên Duy Phương"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/SDT"
                    android:text="Số điện thoại:"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_alignParentBottom="true"
                    android:paddingStart="10dp"
                    android:paddingBottom="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/SDT_KhachHang"
                    android:text="0828811711"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_alignParentBottom="true"
                    android:paddingStart="10dp"
                    android:paddingBottom="5dp"
                    android:layout_toRightOf="@+id/SDT"
                    />

            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>