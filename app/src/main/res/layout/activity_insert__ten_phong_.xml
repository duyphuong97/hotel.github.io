<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Insert_TenPhong_Activity">

    <TextView
        android:id="@+id/TextView_ThemNTro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:text="Thêm nhà trọ"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="#0E0101"
        android:textSize="25dp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/Edit_TenNhaTro"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView_ThemNTro"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="31dp"
        android:layout_marginTop="60dp"
        android:hint="Tên nhà trọ"
        android:inputType="text" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/ic_launcher_background"
        android:scaleType="centerCrop"
        android:id="@+id/imageViewAdd_Ten"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/Edit_TenNhaTro" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewProgress_Ten"
        android:layout_below="@id/imageViewAdd_Ten"
        android:text="0.0 %"
        android:gravity="center"
        android:textSize="25dp"
        />
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_below="@id/textViewProgress_Ten"
        android:layout_marginRight="40dp"
        android:id="@+id/progressBar_Ten"
        android:layout_marginLeft="40dp"
        />
    <Button
        android:textStyle="bold"
        android:textAlignment="center"
        android:background="#FFA000"
        android:id="@+id/button_Brower"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/progressBar_Ten"
        android:text="Upload"
        android:padding="10dp"
        android:layout_marginTop="20dp"/>
</RelativeLayout>